{  
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals", 
    "prettier"
  ],
  "plugins": [
    "prettier",
    "import",
    "unused-imports"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "curly": "error",
    "import/no-cycle": "error",
    "import/order": "error",
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "unused-imports/no-unused-imports": "error",
    "@next/next/no-img-element": "off",
    "no-irregular-whitespace": ["error"],
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": ["/", "/**"]
      }
    ],
    "eol-last": "error"
  }
}
